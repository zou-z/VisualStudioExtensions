<ResourceDictionary
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:converter="clr-namespace:ResxResourceExtension.Converter"
    xmlns:system="clr-namespace:System;assembly=mscorlib">

    <CornerRadius x:Key="DefaultCornerRadius">5</CornerRadius>

    <system:Double x:Key="DefaultComboBoxHeight">30</system:Double>
    <system:Double x:Key="DefaultTextBoxHeight">30</system:Double>
    <system:Double x:Key="DefaultButtonHeight">30</system:Double>

    <system:Double x:Key="DisabledOpacity">0.4</system:Double>

    <SolidColorBrush x:Key="DefaultBackgroundBrush" Color="#1F1F1F" />
    <SolidColorBrush x:Key="DefaultForegroundBrush" Color="#FFFFFF" />
    <SolidColorBrush x:Key="DefaultBorderBrush" Color="#6A6A75" />
    <SolidColorBrush x:Key="DefaultHoverBorderBrush" Color="#B0B0B0" />
    <SolidColorBrush x:Key="DefaultHoverBackgroundBrush" Color="#3A3A3A" />
    <SolidColorBrush x:Key="DefaultSelectedBackgroundBrush" Color="#4D4D4D" />
    <SolidColorBrush x:Key="DefaultControlBackgroundBrush" Color="#282828" />

    <converter:BoolReverseConverter x:Key="BoolReverseConverter" />
    <converter:TrueToVisibleConverter x:Key="TrueToVisibleConverter" />
    <converter:FalseToVisibleConverter x:Key="FalseToVisibleConverter" />
</ResourceDictionary>